generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  isDay       Boolean  @unique
  products    Product[] 
}

model Product {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  price        Float
  image_url    String?  
  menu         Menu?     @relation(fields: [menuId], references: [id], onDelete: SetNull)
  menuId       Int?
  category     Category  @relation(fields: [categoryId], references: [id])
  categoryId   Int
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}
